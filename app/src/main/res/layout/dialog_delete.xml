<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/viewDialogDelete"
        android:layout_width="130dp"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/delete_bar"
        android:src="@drawable/custom_bar_shape"
        app:layout_constraintBottom_toTopOf="@+id/tvNoteQuestion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvNoteQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/product_sans_regular"
        android:text="@string/note_delete_question"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewDialogDelete" />

    <TextView
        android:id="@+id/btnNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_no_button"
        android:backgroundTint="@color/grey"
        android:fontFamily="@font/product_sans_regular"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/dialog_no"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tvNoteQuestion" />

    <TextView
        android:id="@+id/btnYes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_yes_button"
        android:fontFamily="@font/product_sans_regular"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/dialog_yes"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btnNo" />


</androidx.constraintlayout.widget.ConstraintLayout>